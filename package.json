{
  "name": "logplace",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.5.0",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "turbo": "^2.3.3"
  },
  "scripts": {
    "dev": "docker compose -f dev-docker-compose.yml -p dev-logplace up --watch",
    "typecheck": "turbo typecheck",
    "db:studio": "pnpm -C packages/db studio",
    "db:migrate": "pnpm -C packages/db migrate",
    "web:image-pub": "docker image build . -f apps/web/Dockerfile -t swh00tw/logplace-web:latest --push"
  }
}
